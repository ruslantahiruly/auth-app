*
  box-sizing border-box
  outline none

html
body
  width 100%
  height 100%
  position relative
  font 400 16px/1.2 family-primary
  color primary

#__nuxt
#__layout
  height 100%

ul
  list-style none
  padding 0

a
  color link
  text-decoration none
  transition all .1s

img
  height auto
  max-width 100%

h1
h2
h3
h4
h5
h6
  font-size 100%
  font-weight normal

table
  border-collapse collapse
  border-spacing 0
